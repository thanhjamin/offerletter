<%= semantic_form_for @report_card do |f| %>
  <%= f.inputs do %>
    <%= f.hidden_field :test_id %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :grade %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :finished %>
    <%= f.hidden_field :current_question %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
