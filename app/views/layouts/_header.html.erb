<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "<b>Offer</b>Letter".html_safe, root_path, :class => "navbar-brand"%>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse" id="navbar-main">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to 'Practice', exams_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.present? %>
        <li class="<%= 'active' if current_page?('#')%> dropdown">
          <%= link_to (current_user.name.to_s + '<b class="caret"></b>').html_safe, @user, :id => 'setupdrop', :class => "dropdown-toggle nav-link", :data => {:toggle => "dropdown"} %>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            <li class="divider"></li>
            <% if current_user.admin? %>
            <li><%= link_to 'Create Exam', new_exam_path %></li>
            <% end %>
            <li><%= link_to "Help", '#' %></li>
          </ul>
        </li>
        <% else %>
        <!-- Button trigger modal -->
        <li><%= link_to "Sign In", "#signin", "data-toggle" => "modal", :class => "btn btn-clear" %></li>
        <!-- Modal -->
        <div class="modal fade" id="signin" tabindex="-1" role="dialog" aria-labelledby="signinLabel" aria-hidden="true">
          <div class="modal-dialog">
            <%= render "layouts/modals/signin" %>
          </div>
        </div><!-- /.modal -->
        <li class="create-account"><%= link_to "Create Account", "#signup", "data-toggle" => "modal", :class => "btn btn-primary" %></li>
        <div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="signinLabel" aria-hidden="true">
          <div class="modal-dialog">
            <%= render "layouts/modals/signup" %>
            <% end %>
          </div>
        </div><!-- /.modal -->
      </ul>
    </div>
  </div>
</div>
